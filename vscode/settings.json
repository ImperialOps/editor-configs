{
  "telemetry.telemetryLevel": "off",
  "breadcrumbs.enabled": false,
  "extensions.ignoreRecommendations": true,
  "workbench.enableExperiments": false,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorTheme": "Default Dark+",
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.autoReveal": false,
  "window.closeWhenEmpty": true,
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "diffEditor.renderSideBySide": false,
  "diffEditor.renderIndicators": false,
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  "editor.fontSize": 14,
  "editor.matchBrackets": "never",
  "editor.hideCursorInOverviewRuler": true,
  "editor.overviewRulerBorder": false,
  "editor.glyphMargin": false,
  "editor.tokenColorCustomizations": {
    "comments": "#2ea542",
  },
  // Suggestions
  "editor.wordBasedSuggestions": "off",
  "editor.acceptSuggestionOnEnter": "on",
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  "editor.roundedSelection": false,
  "editor.minimap.enabled": false,
  "editor.renderLineHighlight": "none",
  "editor.cursorStyle": "block",
  "editor.lineNumbers": "relative",
  "editor.cursorSurroundingLines": 10,
  "editor.cursorBlinking": "solid",
  "editor.folding": true,
  "editor.autoClosingBrackets": "never",
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "editor.tabSize": 4,
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "on",
  "editor.guides.indentation": false,
  // Vim setup
  "vim.leader": "<space>",
  "vim.easymotion": true,
  "vim.cursorStylePerMode.insert": "line",
  "vim.cursorStylePerMode.normal": "block",
  "vim.cursorStylePerMode.replace": "block-outline",
  "vim.cursorStylePerMode.visual": "block-outline",
  "vim.cursorStylePerMode.visualblock": "block-outline",
  "vim.cursorStylePerMode.visualline": "block-outline",
  "vim.searchHighlightColor": "rgba(150, 255, 255, 0.3)",
  "vim.hlsearch": false,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.handleKeys": {
    "<C-a>": true,
    "<C-d>": true,
    "<C-u>": true,
    "<C-f>": false
  },
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "j",
        "j"
      ],
      "after": [
        "<Esc>"
      ]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<C-u>"
      ],
      "after": [
        "<C-u>",
        "z",
        "z"
      ]
    },
    {
      "before": [
        "<C-d>"
      ],
      "after": [
        "<C-d>",
        "z",
        "z"
      ]
    },
    {
      "before": [
        "<leader>",
        "s"
      ],
      "commands": [
        "workbench.action.files.save"
      ]
    },
    {
      "before": [
        "<leader>",
        "a"
      ],
      "commands": [
        "workbench.action.files.saveFiles"
      ]
    },
    {
      "before": [
        "<leader>",
        "w"
      ],
      "commands": [
        "workbench.action.closeActiveEditor"
      ]
    },
    {
      "before": [
        "<leader>",
        "v"
      ],
      "commands": [
        "workbench.action.splitEditor"
      ]
    },
    {
      "before": [
        "<leader>",
        "x"
      ],
      "commands": [
        "workbench.action.splitEditorDown"
      ]
    },
    {
      "before": [
        "<leader>",
        "e"
      ],
      "commands": [
        "editor.action.showHover"
      ]
    },
    {
      "before": [
        "<leader>",
        "p",
        "f"
      ],
      "commands": [
        "workbench.action.quickOpen"
      ]
    },
    {
      "before": [
        "<leader>",
        "p",
        "x"
      ],
      "commands": [
        "workbench.view.extensions"
      ]
    },
    {
      "before": [
        "<leader>",
        "p",
        "e"
      ],
      "commands": [
        "workbench.view.explorer"
      ]
    },
    {
      "before": [
        "<leader>",
        "p",
        "n"
      ],
      "commands": [
        "welcome.showNewFileEntries"
      ]
    },
    {
      "before": [
        "<leader>",
        "p",
        "s"
      ],
      "commands": [
        "workbench.action.replaceInFiles"
      ]
    },
    {
      "before": [
        "<leader>",
        "i"
      ],
      "commands": [
        "inlineChat.startWithCurrentLine"
      ]
    },
    {
      "before": [
        "<leader>",
        "c"
      ],
      "commands": [
        "workbench.panel.chat.view.copilot.focus"
      ]
    },
    {
      "before": [
        "<leader>",
        "p",
        "q"
      ],
      "commands": [
        "workbench.action.closeSidebar",
        "workbench.action.closeAuxiliaryBar"
      ]
    },
    {
      "before": [
        "<leader>",
        "p",
        "b"
      ],
      "commands": [
        "workbench.action.toggleSidebarVisibility",
      ]
    },
    {
      "before": [
        "<leader>",
        "tab"
      ],
      "commands": [
        "workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup"
      ]
    },
    {
      "before": [
        "<leader>",
        "h"
      ],
      "commands": [
        "workbench.action.focusLeftGroup"
      ]
    },
    {
      "before": [
        "<leader>",
        "l"
      ],
      "commands": [
        "workbench.action.focusRightGroup"
      ]
    },
    {
      "before": [
        "<leader>",
        "j"
      ],
      "commands": [
        "workbench.action.focusBelowGroup"
      ]
    },
    {
      "before": [
        "<leader>",
        "k"
      ],
      "commands": [
        "workbench.action.focusAboveGroup"
      ]
    }
  ],
  // languages
  "javascript.format.enable": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "go.buildFlags": [
    "-v"
  ],
  "go.useLanguageServer": true,
  "go.testEnvFile": "",
  "go.toolsManagement.autoUpdate": true,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[python]": {
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.formatOnSave": true,
    "editor.wordBasedSuggestions": "off",
    "editor.tabSize": 4
  },
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.formatOnSave": false,
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "workbench.activityBar.location": "hidden",
  "dart.flutterSdkPath": "/Users/joshb/workspace/flutter/flutter",
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
}
